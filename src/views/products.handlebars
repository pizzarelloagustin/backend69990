<h1> Products </h1>
{{#each products}}
<div>
    <h2>{{title}}</h2>
    <p> {{_id}} </p>
    <p>{{description}}</p>
    <p>Price: ${{price}}</p>
    <p>Category: {{category}} </p>
    <button> Add to Cart </button>
</div>
{{/each}}


{{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}"> Before </a>
{{/if}}
{{#if hasNextPage}}
    <a href="/products?page={{nextPage}}"> Next </a>
{{/if}} 

<p>Page {{currentPage}} of {{totalPages}} </p>